FROM python:3.9-slim

WORKDIR /app

# 复制依赖文件
COPY requirements.txt .

# 安装依赖
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install gunicorn

# 复制应用程序代码
COPY src/ ./src/

# 创建必要的目录和文件
RUN mkdir -p ./data
RUN touch ./poker.db

# 复制其他Python脚本
COPY *.py ./

# 暴露端口
EXPOSE 8000

# 启动应用程序
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "-k", "uvicorn.workers.UvicornWorker", "src.main:app"] 